set spoolfile = "+INBOX"
set record = "+Sent"
set trash = "+Trash"
set postponed = "+Drafts"

set from = "mailbox@lazycantina.xyz"
set realname = "Anonymous Person"

mailboxes =INBOX =Sent =Trash =Drafts =Archive =Spam

