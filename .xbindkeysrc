# ~/.xbindkeysrc

# Open browser
"brave"
    Mod4 + Shift + w

# Screenshot
"flameshot gui"
    Mod4 + Shift + s

# Open file manager
"nautilus"
    Mod4 + e

# Reduce / increase volume
"pactl set-sink-volume @DEFAULT_SINK@ +1%; pkill -RTMIN+10 dwmblocks"
    Mod4 + u

"pactl set-sink-volume @DEFAULT_SINK@ -1%; pkill -RTMIN+10 dwmblocks"
    Mod4 + y

# Wake screen
"xrandr --output HDMI-0 --mode 1920x1080 --rate 240"
    Mod4 + Shift + 0

# Launch power menu
"bash /home/geko/.config/rofi/powermenu/powermenu.sh"
    Mod4 + Shift + o

